<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/MyJava.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="w3-bar w3-black">
                <a href=@Url.Action("Index","Index") class="w3-bar-item w3-button">Welcome to our website! </a>
                <a href=@Url.Action("Index","Stack") class="w3-bar-item w3-button">Stack</a>
                <a href=@Url.Action("Index","Queue") class="w3-bar-item w3-button">Queue</a>
                <a href=@Url.Action("Index","Dictionary") class="w3-bar-item w3-button">Dictionary</a>
                <a href=@Url.Action("Exit","Index") class="w3-bar-item w3-button">Exit</a>
            </div>

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team 12.</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>